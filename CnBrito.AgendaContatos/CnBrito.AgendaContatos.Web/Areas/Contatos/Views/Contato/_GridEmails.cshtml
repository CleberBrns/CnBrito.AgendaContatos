@model List<CnBrito.AgendaContatos.Model.Agenda.EmailModel>

@{  
    var user = (CnBrito.AgendaContatos.Model.Usuario.UsuarioModel)ViewBag.Usuario;
}

@if (user != null)
{
    <div>

        <div class="col-md-10 col-sm-10" style="overflow-x:auto; padding-top: 5%">
            <table class="table table-striped" id="gridEmails" carregada="false">
                <thead>
                    <tr>
                        <th>E-mails</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var itemModel in Model)                    
                    {
                        <tr>
                            <td>@itemModel.Endereco</td>
                            <td class="text-center">
                                <a class="btnExcluir" id-registro="@itemModel.Id"
                                   title="Excluir" onclick="Contato.ExcluiEmail(this)" style="cursor: pointer;">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script>

        $("#gridEmails").DataTable({
            "pageLength": 5,
            "lengthChange": false,
            language: {
                url: "https://cdn.datatables.net/plug-ins/1.10.16/i18n/Portuguese-Brasil.json"
            },
            "columnDefs": [
                { "targets": [1], "orderable": false, "searchable": false }
            ],
            "aaSorting": []
        });

    </script>
}
